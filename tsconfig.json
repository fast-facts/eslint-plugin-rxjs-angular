{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "esnext"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitHelpers": true,
    "outDir": "build",
    "paths": {},
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [],
  "include": [
    "source/**/*.ts",
    "tests/**/*.ts",
    "eslint.config.mjs"
  ]
}